{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["react", "react-native"],
    "outDir": "./dist",  // Specifies the output directory for compiled files
    "rootDir": "./src",  // Specifies the input directory for TypeScript files
    "declaration": true,  // Generates type definition files
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
